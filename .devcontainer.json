{
    "name": "Python Development Environment",
    "build": {
        "context": "..",
        "dockerfile": ".devcontainer/Dockerfile",
        "args": {
            "VARIANT": "3.8"
        }
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "mkdir -p ./data && pip install -r requirements.txt",
    "extensions": [
        "ms-python.python"
    ],
    "remoteUser": "vscode"
}
